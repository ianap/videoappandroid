<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/lifeVideoBtn" />

    <Button
        android:background="@drawable/custom_blue_button"
        android:text="Record"
        android:id="@+id/mStartBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/button_text"
        android:layout_below="@+id/lifeVideoBtn"
        android:layout_toEndOf="@+id/videoView" />

    <Button
        android:background="@drawable/custom_blue_button"
        android:layout_width="90dp"
        android:text="Stop"
        android:id="@+id/mStopBtn"
        android:layout_height="wrap_content"
        style="@style/button_text"
        android:layout_toEndOf="@+id/videoView" />

    <Button
        android:background="@drawable/custom_blue_button"
        android:text="@string/MainActivity.lifeVideoBtn"
        android:id="@+id/lifeVideoBtn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        style="@style/button_text"
        android:layout_below="@+id/mStopBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="87dp" />

    <Button
        android:background="@drawable/custom_blue_button"
        android:text="Segment "
        android:id="@+id/btnSegmentVideo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/button_text"
        android:layout_below="@+id/mStartBtn"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/videoView" />


    <Button
        android:background="@drawable/custom_blue_button"
        android:text="Upload"
        android:id="@+id/uploadVideoButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        style="@style/button_text"
        android:layout_below="@+id/btnSegmentVideo"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
